{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "ExpenseServiceRoute": {
        "ClusterId": "ExpenseService",
        "Match": {
          "Path": "/ExpenseService/Api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/ExpenseService/Api"
          }
        ]
      }
    },
    "Clusters": {
      "ExpenseService": {
        "Destinations": {
          "ExpenseService/ApiDestination": {
            "Address": "http://localhost:5196/api"
          }
        }
      }
    }
  }

}